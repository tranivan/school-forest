{% extends "base.jinja2" %}
{% block title %}Blog - {% endblock %}
{% block content %}


<body class="text-forest min-h-screen bg-background-primary flex flex-col mt-12">
    <main class="container mx-auto px-8">
        <div class="grid grid-cols-[auto_1fr] mt-2">
            <h1 class="font-black text-7xl">BLOG</h1>
            <div class="justify-self-center content-end">
                <h3 class="font-extrabold text-xs mb-2 text-primary">FILTROVAT PODLE:</h3>
                <div class="flex gap-4">
                    <button class="radio">VŠECHNO</button>
                    <button class="radio">REPOROTÁŽ</button>
                    <button class="radio">LÍČENÍ</button>
                    <button class="radio">NAUČNÉ</button>
                </div>
            </div>
        </div>
        <div
            class="grid sm:grid-cols-2 lg:grid-cols-3 auto-rows-[85px] xl:auto-rows-[120px] gap-6 place-items-center mt-2">
            <div class="sm:col-span-2 sm:row-span-4 row-span-3 size-full homecard flex flex-col p-2">
                <img src="/static/hory.jpg"
                    class="object-cover object-center aspect-video w-auto h-full rounded-md mb-4" />
                <h3 class="text-background-primary text-xl font-semibold mb-4">Jdeme na hory!</h3>
                <div class="flex justify-between w-4/5">
                    <p class="radiolabel">ZPRÁVA</p>
                    <div class="flex gap-2">
                        <p class="checkboxlabel">SEXTA</p>
                        <p class="checkboxlabel">SEPIMA</p>
                    </div>
                </div>
            </div>

            <div class="homecard row-span-3 lg:row-span-2 h-full w-full flex flex-col p-2">
                <img src="/static/hory.jpg" class="object-cover object-center h-4/7 w-full rounded-md" />
                <div class="flex flex-col justify-between h-3/7 p-2">
                    <h3 class="text-background-primary text-xl font-semibold">Bude oplocenka</h3>
                    <div class="flex flex-wrap justify-between gap-2 w-4/5">
                        <p class="radiolabel">ZPRÁVA</p>
                        <div class="flex gap-2">
                            <p class="checkboxlabel">SEXTA</p>
                            <p class="checkboxlabel">Sepima</p>
                            <p class="checkboxlabel">SEPIMA</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="homecard row-span-3 lg:row-span-2 h-full w-full flex flex-col p-2">
                <img src="/static/hory.jpg" class="object-cover object-center h-4/7 w-full rounded-md" />
                <div class="h-3/7 flex flex-col justify-between p-2">
                    <h3 class="text-background-primary text-xl font-semibold">Bude oplocenka</h3>
                    <div class="flex flex-wrap justify-between gap-2 w-4/5">
                        <p class="radiolabel">ZPRÁVA</p>
                        <div class="flex gap-2">
                            <p class="checkboxlabel">SEXTA</p>
                            <p class="checkboxlabel">Sepima</p>
                            <p class="checkboxlabel">SEPIMA</p>
                        </div>
                    </div>
                </div>

            </div>
            {% for _ in range(10) %}
            <div class="homecard row-span-3 h-full w-full flex flex-col p-2">
                <img src="/static/hory.jpg" class="object-cover object-center h-5/7 w-full rounded-md mb-4" />
                <h3 class="text-background-primary text-2xl xl:text-3xl font-semibold mb-4">Bude oplocenka</h3>
                <div class="flex justify-between">
                    <div class="flex justify-between items-end h-8 pb-1 w-4/5">
                        <p class="radiolabel">ZPRÁVA</p>
                        <div class="flex gap-2">
                            <p class="checkboxlabel ">SEXTA</p>
                            <p class="checkboxlabel ">SEPIMA</p>
                        </div>
                    </div>
                    <img src="/static/arrowupright.svg" class="mx-auto h-8" />
                </div>
            </div>
            {% endfor %}
        </div>
    </main>

    <script></script>
</body>

{%endblock%}