    <script>
        function toggleDropdown() {
            const content = document.querySelector('.dropdown-content');
            const arrow = document.querySelector('.dropdown-arrow');

            content.classList.toggle('hidden');
            arrow.classList.toggle('rotate-180');
        }

        function selectOption(value) {
            document.getElementById('selected-text').textContent = value;
            document.getElementById('selected-text').classList.remove('text-gray-500');
            document.getElementById('selected-text').classList.add('text-gray-700');

            // Show clear button
            document.getElementById('clear-btn').classList.remove('hidden');

            closeDropdown();
        }

        function clearSelection(event) {
            event.stopPropagation(); // Prevent dropdown from opening

            document.getElementById('selected-text').textContent = 'Vybrat třídu';
            document.getElementById('selected-text').classList.remove('text-gray-700');
            document.getElementById('selected-text').classList.add('text-gray-500');

            // Hide clear button
            document.getElementById('clear-btn').classList.add('hidden');
        }

        function closeDropdown() {
            document.querySelector('.dropdown-content').classList.add('hidden');
            document.querySelector('.dropdown-arrow').classList.remove('rotate-180');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function (event) {
            const container = event.target.closest('.relative');
            if (!container) {
                closeDropdown();
            }
        });

        // Initialize with placeholder styling
        document.getElementById('selected-text').classList.add('text-gray-500');
    </script>

